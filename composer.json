{
  "name": "chamber-orchestra/form-bundle",
  "type": "library",
  "description": "Symfony 8 bundle for JSON-first API form handling with RFC 9110 error responses, data transformers, and Doctrine validation",
  "keywords": [
    "symfony",
    "symfony8",
    "form",
    "api",
    "json",
    "rest",
    "rfc9110",
    "validation",
    "doctrine",
    "data-transformer"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Lukin",
      "email": "lukin.andrej@gmail.com",
      "homepage": "https://github.com/wtorsi",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.5",
    "chamber-orchestra/view-bundle": "8.0.*",
    "symfony/dependency-injection": "8.0.*",
    "symfony/config": "8.0.*",
    "symfony/framework-bundle": "8.0.*",
    "symfony/runtime": "8.0.*",
    "symfony/form": "8.0.*",
    "symfony/validator": "8.0.*",
    "symfony/translation": "8.0.*",
    "symfony/clock": "8.0.*",
    "doctrine/orm": "3.6.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^13.0",
    "symfony/test-pack": "^1.2",
    "doctrine/doctrine-bundle": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "ChamberOrchestra\\FormBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "8.0.*"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
